{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend (npm run dev:backend)",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev:backend", "--"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "env": { "NODE_ENV": "development" }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Backend with Frontend Watch",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev:full"],
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development"
      }
    }    
  ]
}
