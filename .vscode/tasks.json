{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Watch Frontend",
        "type": "shell",
        "command": "tsc",
        "args": ["-p", "tsconfig.frontend.json", "--watch"],
        "group": "build",
        "problemMatcher": "$tsc-watch"
      },
      {
        "label": "Watch Backend",
        "type": "shell",
        "command": "tsc",
        "args": ["-p", "tsconfig.backend.json", "--watch"],
        "group": "build",
        "problemMatcher": "$tsc-watch"
      },
      {
        "label": "Build Frontend",
        "type": "shell",
        "command": "tsc",
        "args": ["-p", "tsconfig.frontend.json"],
        "group": "build",
        "problemMatcher": "$tsc"
      },
      {
        "label": "Build Backend",
        "type": "shell",
        "command": "tsc",
        "args": ["-p", "tsconfig.backend.json"],
        "group": "build",
        "problemMatcher": "$tsc"
      }
    ]
  }
  