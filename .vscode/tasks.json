{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Watch Frontend",
        "type": "shell",
        "command": "tsc",
        "args": ["-p", "tsconfig.frontend.json", "--watch"],
        "group": "build",
        "problemMatcher": "$tsc-watch"
      },
      {
        "label": "Watch Backend",
        "type": "shell",
        "command": "tsc",
        "args": ["-p", "tsconfig.backend.json", "--watch"],
        "group": "build",
        "problemMatcher": "$tsc-watch"
      },
      {
        "label": "Build Frontend",
        "type": "shell",
        "command": "tsc",
        "args": ["-p", "tsconfig.frontend.json"],
        "group": "build",
        "problemMatcher": "$tsc"
      },
      {
        "label": "Build Backend",
        "type": "shell",
        "command": "tsc",
        "args": ["-p", "tsconfig.backend.json"],
        "group": "build",
        "problemMatcher": "$tsc"
      },
      {
        "label": "webpack: build",
        "type": "npm",
        "script": "build",
        "group": "build",
        "problemMatcher": []
      },
      {
        "label": "webpack: watch",
        "type": "npm",
        "script": "watch",
        "group": "build",
        "isBackground": true,        
        "problemMatcher": []
      },
      {
        "label": "Sync README version",
        "type": "shell",
        "command": "node",
        "args": ["tools/update-readme-version.js"],
        "group": "none",
        "problemMatcher": []
      }      
    ]
  }
  